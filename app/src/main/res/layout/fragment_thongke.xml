<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_thong_ke"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".fragment.ThongKeFragment">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="THỐNG KÊ DOANH THU"
        android:textColor="#8000FF"
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="24dp" />

    <!-- Nút Theo nhà thuốc -->
    <LinearLayout
        android:id="@+id/btnTheoNhaSach"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_below="@id/tvTitle"
        android:layout_marginTop="36dp"
        android:layout_marginStart="32dp"
        android:orientation="vertical"
        android:background="@drawable/bg_button_green"
        android:gravity="center"
        android:padding="16dp">

        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/nha_sach" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Theo nhà sách"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <!-- Nút Theo loại thuốc -->
    <LinearLayout
        android:id="@+id/btnTheoSach"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_below="@id/tvTitle"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="32dp"
        android:orientation="vertical"
        android:background="@drawable/bg_button_green"
        android:gravity="center"
        android:padding="16dp">

        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/sach" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Theo loại sách"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

</RelativeLayout>
